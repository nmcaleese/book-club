<%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-4 text-center mt-5">
      <h4>Book Club</h4>
      <% book.comments.forEach(function(comment) { %>
      <div class="container mt-2">
        <div class="row">
          <div class="col">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= comment.userName %></h5>
                <p class="card-text"><%= comment.content %></p>
                <h5 class="card-title"><%= comment.rating %>/10</h5>
                <% if (user && user._id.equals(comment.user) ) { %>
                <div class="row">
                  <div class="col md-6">
                    <div
                      class="modal fade"
                      id="editModal"
                      tabindex="-1"
                      aria-labelledby="editModalLabel"
                      aria-hidden="true"
                    >
                      <div
                        class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
                      >
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">
                              Edit Your Take
                            </h5>
                            <button
                              type="button"
                              class="btn-close"
                              data-bs-dismiss="modal"
                              aria-label="Close"
                            ></button>
                          </div>
                          <form
                            action="/comments/<%= comment.id %>?_method=PUT"
                            method="POST"
                          >
                            <div class="modal-body">
                              <div class="form-floating">
                                <textarea
                                  class="form-control"
                                  name="content"
                                  placeholder="Leave a comment here"
                                  id="floatingTextarea2"
                                  style="height: 100px"
                                >
                                <%- comment.content%>
                                </textarea>
                                <label for="floatingTextarea2"
                                  >My Take On It</label
                                >
                                <div>
                                  <label for="customRange2" class="form-label"
                                    >Rating</label
                                  >
                                  <input
                                    type="range"
                                    class="form-range"
                                    min="0"
                                    max="10"
                                    id="customRange2"
                                    name="rating"
                                  />
                                </div>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                              >
                                Close
                              </button>
                              <button type="submit" class="btn btn-primary">
                                Save changes
                              </button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                    <button
                      type="button"
                      class="btn btn-primary btn-sm"
                      data-bs-toggle="modal"
                      data-bs-target="#editModal"
                    >
                      Edit
                    </button>
                  </div>
                  <div class="col md-6">
                    <form
                      action="/comments/<%= comment._id %>?_method=DELETE"
                      method="POST"
                    >
                      <button type="submit" class="btn btn-primary btn-sm">
                        Delete
                      </button>
                    </form>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <div class="col-4">
      <div class="card mt-5">
        <div class="card-body text-center">
          <h3 class="card-title"><%= book.title %></h3>
          <p class="card-text">by</p>
          <h4><%= book.author.first %> <%= book.author.last %></h4>
          <% if(user) { %>
          <form
            class="row g-3"
            method="POST"
            action="/books/<%= book._id %>/comments"
          >
            <div class="form-floating mt-5">
              <textarea
                class="form-control"
                name="content"
                placeholder="Leave a comment here"
                id="floatingTextarea2"
                style="height: 100px"
              ></textarea>
              <label for="floatingTextarea2">My Take on It</label>
              <div>
                <label for="customRange2" class="form-label">Rating</label>
                <input
                  type="range"
                  class="form-range"
                  min="0"
                  max="10"
                  id="customRange2"
                  name="rating"
                />
              </div>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Add My Take</button>
            </div>
          </form>
          <form
            class="row g-3 mt-2"
            action="/books/<%= book._id %>/quotes"
            method="POST"
          >
            <div class="form-floating">
              <textarea
                class="form-control"
                name="content"
                placeholder="Leave a comment here"
                id="floatingTextarea2"
                style="height: 100px"
              ></textarea>
              <label for="floatingTextarea2">My Favorite Quote</label>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Add Quote</button>
            </div>
          </form>
          <% } %>
        </div>
      </div>
    </div>
    <div class="col-4 text-center mt-5">
      <h4>Favorite Quotes</h4>
      <% book.quotes.forEach(function(quote) { %>
      <div class="container mt-2">
        <div class="row">
          <div class="col">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= quote.userName %></h5>
                <p class="card-text"><%= quote.content %></p>
                <% if (user && user._id.equals(quote.user) ) { %>
                <div class="row">
                  <div class="col md-6">
                    <div
                      class="modal fade"
                      id="quoteModal"
                      tabindex="-1"
                      aria-labelledby="editModalLabel"
                      aria-hidden="true"
                    >
                      <div
                        class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
                      >
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="editModalLabel">
                              Edit Your Quote
                            </h5>
                            <button
                              type="button"
                              class="btn-close"
                              data-bs-dismiss="modal"
                              aria-label="Close"
                            ></button>
                          </div>
                          <form
                            action="/quotes/<%= quote._id %>?_method=PUT"
                            method="POST"
                          >
                            <div class="modal-body">
                              <div class="form-floating">
                                <textarea
                                  class="form-control"
                                  name="content"
                                  placeholder="Leave a comment here"
                                  id="floatingTextarea2"
                                  style="height: 100px"
                                >
                                <%- quote.content%>
                                </textarea>
                                <label for="floatingTextarea2"
                                  >My Favorite Quote</label
                                >
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                              >
                                Close
                              </button>
                              <button type="submit" class="btn btn-primary">
                                Save changes
                              </button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                    <button
                      type="button"
                      class="btn btn-primary btn-sm"
                      data-bs-toggle="modal"
                      data-bs-target="#quoteModal"
                    >
                      Edit
                    </button>
                  </div>
                  <div class="col md-6">
                    <form
                      action="/quotes/<%= quote._id %>?_method=DELETE"
                      method="POST"
                    >
                      <button type="submit" class="btn btn-primary btn-sm">
                        Delete
                      </button>
                    </form>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
